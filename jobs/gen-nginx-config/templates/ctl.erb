#!/bin/bash

JOB_NAME=gen-nginx-config

RUN_DIR=/var/vcap/sys/run/$JOB_NAME
LOG_DIR=/var/vcap/sys/log/$JOB_NAME
CONF_DIR=/var/vcap/jobs/$JOB_NAME/config
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    exec /var/vcap/packages/nginx-tls-config-go-tools/bin/gen-nginx-config -daemon -config $CONF_DIR/config.yml \
      >>  $LOG_DIR/gen-nginx-config.stdout.log \
      2>> $LOG_DIR/gen-nginx-config.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac